{
  "name": "joemugen/fizzbuzz",
  "license": "MIT",
  "description": "Fizz Buzz test",
  "type": "project",
  "require": {
    "php": "^7.2"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpspec/phpspec": "^5.1"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "run": [
      "php -S localhost:8000 -t src/"
    ],
    "test": [
      "vendor/phpspec/phpspec/bin/phpspec run"
    ]
  },
  "authors": [
    {
      "name": "Joe FRANCOIS",
      "email": "joe@ffs.place"
    }
  ]
}
